{% include 'layout.html.j2' %}

<div class="container">
  <div class="card">
    <div class="card-header">
      Add a component
    </div>
    <div class="card-body">
      <form id="newComponentForm">
        <div class="form-group">
          <label>Name</label>
          <input type="text" class="form-control" name="name" required>
        </div>
        <div class="form-group">
          <label>Tier</label>
          <input type="text" class="form-control" name="tier" required>
        </div>
        <div class="form-group form-check">
          <input type="checkbox" class="form-check-input" name="is_raw_material">
          <label class="form-check-label">Raw Material</label>
        </div>
        <button type="submit" class="btn btn-primary"> Add Component </button>
        <a href="/components-page" class="btn btn-success">Back</a>
      </form>
    </div>
  </div>
</div>